<form method="get" action="/docs">
  <button type="submit">Ver documentación</button>
</form>

<h1>Bienvenido: {{user.first_name}} {{user.last_name}}</h1>
<p>Edad: {{user.age}} años</p>
<p>Correo: {{user.email}}</p>
<p>Rol: {{user.role}}</p>

<form method="get" action="/api/carts/{{user.cartId}}">
      <button type="submit">Ir a tu carrito</button>
</form>

<form method="get" action="/api/admin">
  <button type="submit">Ir a panel de admininstrador</button>
</form>

<form method="get" action="/api/users">
  <button type="submit">Ver todos los usuarios</button>
</form>

<h2>Productos</h2>
<ul>
{{#each products}}
  <li>
    <h3>Title: {{this.title}}</h3>
    <p>Description: {{this.description}}</p>
    <p>Price: {{this.price}}</p>
    <p>Category: {{this.category}}</p>
    <p>Stock: {{this.stock}}</p>
    <p>ID para pruebas: {{this._id}}</p>

    <form method="post" action="/api/carts/{{../user.cartId}}/products/{{this._id}}">
      <button type="submit">Agregar al carrito</button>
    </form>
  </li>
{{/each}}
</ul>

<div>
  {{#if prevLink}}
  <a href="{{prevLink}}">Pagina anterior</a>
  {{/if}}
  {{#if nextLink}}
  <a href="{{nextLink}}">Pagina siguiente</a>
  {{/if}}
</div>

<form id="cerrarSesion" action="/logout" method="post">
  <button type="submit">Cerrar sesión</button>
</form>

<script src="/js/products.js"></script>